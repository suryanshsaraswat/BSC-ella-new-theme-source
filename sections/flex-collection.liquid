<style>
  .flex-inner{display:flex;justify-content:center}
.img-dflex{width:50%}
.text-dflex{width:50%;padding:60px 0;text-align:center}
.text_first{flex-direction:row-reverse}
.text-dflex p{font-size:22px;padding:0 40px;margin-top:-7px;line-height:35px;font-weight:500;color:#fff;letter-spacing:.9px}
.text-dflex h2{font-size:30px;color:#fff;text-transform:capitalize;font-weight:600}
.button-coll a{background:#fff;display:block;max-width:100%;width:200px;margin:0 auto;padding:11px 28px;font-size:20px;text-transform:uppercase;box-shadow:1px 1px 1px 1px #000}
@media(max-width:450px){
  .text_first{flex-direction:column}
}  
</style>
<section class="flex-box collection">
  {% for block in section.blocks %}
  <div class="flex-inner flex-{{ forloop.index }} {% if block.settings.layout_flex == 'img_first' %}image_first{% else %}text_first{% endif %}" id={{ block.id }}>
    <div class="img-dflex">
      <img class="flex-img" src="{{ block.settings.collection_img | img_url:'master' }}" alt="{{ block.settings.collection_img.alt }}" width="100%" height="100%">
    </div>
    <div class="text-dflex" style="background-color:{{ block.settings.container-color }}">
      <h2>{{ block.settings.collection-heading | escape }}</h2>
      <p>{{ block.settings.collection-body | escape }}</p>
      <div class="button-coll">
        <a href="{{ block.settings.collection-url }}">SHOP NOW</a>
      </div>
    </div>
  </div>
  {% endfor %}
</section>
{% schema %}
  {
    "name": "Exclusive Collection",
    "settings": [],
    "blocks":[
      {
        "name":"Collection BLock",
        "type":"image",
        "settings":[
          {
            "type":"image_picker",
            "id":"collection_img",
            "label":"Select Collection Image",
            "info":"Recommended size: 1024 x 729"
          },
          {
            "type":"color",
            "id":"container-color",
            "label":"Select Color for container"
          },
          {
            "type":"text",
            "id":"collection-heading",
            "label":"Enter Collection Heading"
          },
          {
            "type":"text",
            "id":"collection-body",
            "label":"Enter collection Label"
          },
          {
            "type":"url",
            "id":"collection-url",
            "label":"Select Collection URL"
          },
          {
          "type":"select",
          "id":"layout_flex",
          "options":[
            {
              "value":"img_first",
              "label":"Image FIrst"
            },
            {
              "value":"text_first",
              "label":"Text First"
            }
          ],
          "default":"img_first",
          "label":"Select Layout"
        },
          {
            "type":"text",
            "id":"button-label",
            "label":"Enter Button Label"
          }
        ]
      }
    ],
    "presets":[
      {
        "name":"Exclusive Collection Block"
      }
    ]
  }
{% endschema %}

